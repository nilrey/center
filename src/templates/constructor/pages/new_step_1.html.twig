{% extends 'constructor/new_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/ncuoportal/css/foiv.form.css') }}" />
    <style>.imagePreview img{max-width: 200px} table.dataTable input[type="file"]{ margin-left: 20px}</style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/ncuooiv/js/imgBase64.js') }}"></script>
{% endblock %}

{% block nameheader %}
<div class="container-fluid" style="line-height: 40px">
  <div class="row">
    <div class="col-8" style="font-weight: 600; font-size: 16px; margin-left: 38px">
        Новый шаблон формы ввода данных. Шаг 1 - заполнение первичных данных
    </div>
  </div>
</div>
{% endblock %} 

{% block content %}

<div style="width: 95%; margin: auto; margin-top: 30px">
    <div id="dialog_msg_info" class="display-none" hidden title="Инфо"></div>
    <div id="error_msg_dialog" class="display-none"  title="Внимание" hidden></div>
    <form class="form-inline" id="create_data" method="post" action="{{urlAction}}">
    <table class="table">
        <tr>
            <td>
                <strong style="color: #333; font-size: 16px">Название формы ввода данных</strong>
            </td>
            <td width="100%">
                <input type="text" name="FIELDS[name]" style="width: 100%" value="Макроэкономические показатели региона">
            </td>
        </tr>
        <tr>
            <td>
                <strong style="color: #333; font-size: 16px">Описание формы ввода данных</strong>
            </td>
            <td width="100%">
                <input type="text" name="FIELDS[descr]" style="width: 100%" value="Макроэкономические показатели региона по форме МО №234-43/2024">
            </td>
        </tr>
    </table>


    <table class="table" style="border: 0px !important">
        <tr>
            <td colspan=4>
                <strong style="color: #333; font-size: 16px">Выберите вид формы ввода данных</strong>
            </td>
        </tr>
        <tr>
            <td style="border: 1px solid #666666; width: 25%">
                <input type="radio" name="FIELDS[table_type]" value="fix" style="margin-right: 12px" checked>Фиксированная
            </td>
            <td>&nbsp;</td>
            <td style="border: 1px solid #666666">
                <input type="radio" name="FIELDS[table_type]" value="cols" style="margin-right: 12px" disabled> Добавление колонок
            </td>
            <td>&nbsp;</td>
            <td style="border: 1px solid #666666">
                <input type="radio" name="FIELDS[table_type]" value="rows" style="margin-right: 12px" disabled> Добавление строк
            </td>
            <td>&nbsp;</td>
            <td style="border: 1px solid #666666">
                <input type="radio" name="FIELDS[table_type]" value="rows" style="margin-right: 12px" disabled> Добавление колонок и строк
            </td>
        </tr>
    </table>    
    <table class="table" style="border: 0px !important">
        <tr>
            <td>
                <strong style="color: #333; font-size: 16px">Количество столбцов</strong>
            </td>
            <td width="100%">
                <input type="text" name="FIELDS[cols_num]" value="6" style="width: 50px" maxlength="2">
            </td>
        </tr>
        <tr>
            <td>
                <strong style="color: #333; font-size: 16px">Количество строк</strong>
            </td>
            <td width="100%">
                <input type="text" name="FIELDS[rows_num]" value="1" style="width: 50px; margin-right:50px" maxlength="2" ><input type="checkbox" name="FIELDS[rows_unlim]" value="3" style="margin-right: 12px" >неограниченно
            </td>
        </tr>
    </table>
    
    <div class="container-fluid" style="padding-bottom: 50px">
        <div class="row">
            <div class="col" style="text-align: left; padding-left: 0px;">
                {#}<button type="submit" class="btn btn-primary" style="background: none; color: #228BE6; width: 140px; margin-top: 15px; margin-right: 50px;">Продолжить</button>{#}
                <button type="submit" class="btn btn-primary" class="btn btn-primary" style="background: none; color: #228BE6; width: 140px; margin-top: 15px; margin-right: 15px;">Продолжить</button>
                <button type="button" onclick="window.location.replace('/public/constructor')" class="btn btn-primary" style="background: none; color: #228BE6; width: 170px; margin-top: 15px; margin-right: 50px;">Вернуться на шаг</button>
                <button type="button" onclick="window.location.replace('/public/constructor')" class="btn btn-primary" style="background: none; color: #228BE6; width: 190px; margin-top: 15px;">Вернуться к списку</button>
            </div>
        </div>
    </div> 
    </form>
</div>
{% endblock %}

