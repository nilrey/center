{% extends 'ncuofoiv/layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{%endblock%}


{% block content %}
{% set total = Results|length %}
<div class="row" style="margin-top: 10px; margin-bottom: 4px;">
        <div class="col-md-9">
            <h4><i class="fa fa-database fa-fw"></i>&nbsp;<i class="fa fa-angle-right"></i>&nbsp;Сравнение изменений в таблице {{SourceTableName}}</h4>
        </div>
        <div class="contentHolder" style="overflow-x:scroll;width:100%">
		{# class:display nowrap #}
			 <table id="dTable" class="table table-striped table-bordered " cellspacing="0" width="130%">
				<thead>
					<tr>
						<th colspan="{{OldFieldsNamesCount}}">До изменений</th>
						<th colspan="{{NewFieldsNamesCount}}">После изменений</th>
					</tr>
					<tr>
						{% for old_field in OldFieldsNames %}
						<th>{{old_field}}</th>
						{% endfor %}
						
						{% for new_field in NewFieldsNames %}
						<th>{{new_field}}</th>
						{% endfor %}
						
					</tr>
				</thead>
				<tbody>
					 {% for curr_row in Results %}
						<tr>
							{% for curr_cell in curr_row %}
							<td>{{curr_cell}}</td>
							{% endfor %}
						</tr>
					 {% endfor %}
				</tbody>
			</table>
		</div>
</div>
	
{%endblock%}